{
  "manifest_version": 3,
  "name": "NovaGet Download Manager",
  "version": "1.0.0",
  "description": "Intercept downloads and send them to NovaGet Download Manager",
  "permissions": [
    "downloads",
    "nativeMessaging",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "ftp://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "32": "icons/icon-32x32.png",
      "64": "icons/icon-64x64.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "64": "icons/icon-64x64.png",
    "128": "icons/icon-128x128.png"
  },
  "options_page": "options.html"
}
