{
  "manifest_version": 2,
  "name": "NovaGet Download Manager",
  "version": "1.0.0",
  "description": "Intercept downloads and send them to NovaGet Download Manager",
  "permissions": [
    "downloads",
    "nativeMessaging",
    "notifications",
    "http://*/*",
    "https://*/*",
    "ftp://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "32": "icons/icon-32x32.png",
      "64": "icons/icon-64x64.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "64": "icons/icon-64x64.png",
    "128": "icons/icon-128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "novaget@example.com",
      "strict_min_version": "109.0"
    }
  }
}
